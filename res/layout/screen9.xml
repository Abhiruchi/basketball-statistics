<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|left"
    android:orientation="vertical" >
     <TextView
        android:id="@+id/team_nametext"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:height="50dp"
        android:text="Team Name"
        android:textSize="12sp"
        android:width="100dp" />
<TextView
        android:id="@+id/no_of_playerstext"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:height="50dp"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:text="No of Players"
        android:width="100dp"
        android:layout_below="@id/team_nametext" />
        <TextView
        android:id="@+id/captain_nametext"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:height="50dp"
        android:text="Captain Name"
        android:width="100dp"
        android:layout_below="@id/no_of_playerstext" />

    <EditText
        android:id="@+id/et_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textfield"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/team_nametext"
        android:layout_alignBottom="@+id/team_nametext"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/et_no_of_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textfield"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/no_of_playerstext"
        android:layout_alignBottom="@+id/no_of_playerstext"
        android:layout_alignParentRight="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/tv_captain_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/captain_nametext"
        android:background="@drawable/textfield"
        android:layout_alignBottom="@+id/captain_nametext"
        android:layout_alignParentRight="true"
        android:ems="10" />
</RelativeLayout>
</LinearLayout>