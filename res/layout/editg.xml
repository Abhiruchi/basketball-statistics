<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grayback" >

<TextView
    android:id="@+id/deleteschedule"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_alignLeft="@+id/editschedule"
    android:layout_below="@+id/editschedule"
    android:layout_marginTop="17dp"
    android:background="@drawable/blackback"
    android:text="            Delete Schedule       "
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="#FFFFFF" />

<TextView
    android:id="@+id/editschedule"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="17dp"
    android:background="@drawable/blackback"
    android:text="             Edit Schedule          "
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="#FFFFFF" />

</RelativeLayout>


